{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PerfectMD",
  "version": "1.0.0",
  "identifier": "com.perfectmd.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "PerfectMD - Markdown Editor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "PerfectMD - Markdown Editor",
    "longDescription": "A modern Markdown editor combining Typora's simplicity with Word's rich formatting capabilities",
    "publisher": "PerfectMD"
  }
}
